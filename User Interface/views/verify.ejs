<!-- --- VERIFY PAGE FOR MOBILE NUMBER --- -->

<!-- HEADER SECTION -->
<%- include('header') -%>

<!-- NAVBAR SECTION -->
<%- include('navbar') -%>

<div id="verify-section">
	<i
		class="fa-solid fa-mobile-screen-button"
		style="
			font-size: 200px;
			color: #496eae;
			text-align: center;
			width: 80vw;
			margin-bottom: 3%;
		"
	></i>
	<div style="color: #496eae; text-align: center; font-size: x-large">
		VERIFY YOUR DETAILS 
	</div>
	<div id="verifyNum">
		<div>Hi <%= username %>!</div>
		<div>Enter The Code Sent To</div>
		<div><%= mail %></div>

		<form action="/verify" method="post">
			<input name="userName" value="<%= username %>" style="display: none" />
			<input name="phoneNumber" value="<%= number %>" style="display: none" />
			<input name="realCode" value="<%= code %>" style="display: none" />
			<input placeholder="Enter Verification Code" name="code" required /><br />
			<button type="submit">VERIFY NOW</button>
		</form>
	</div>
</div>

<!-- CONTACT SECTION -->
<%- include('contact') -%>

<!-- FOOTER SECTION -->
<%- include('footer') -%>
